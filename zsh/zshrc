# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

export TERM=xterm-256color

alias lsa="ls -alG"

alias subf="subl --command toggle_full_screen" # (sub)lime (f)ullscreen
alias vim="nvim"
alias nots="jupyter notebook --script"
alias notc="jupyter nbconvert"

alias workon="source bin/activate"
alias workoff="deactivate"

alias ggraph="git log --graph --oneline --decorate"


# http://gggritso.com/human-git-aliases
alias gbranches="git branch -a"
alias gtags="git tag"
alias gstashes="git stash list"

alias gunstage="git reset -q HEAD --"
alias gdiscard="git checkout --"
alias guncommit="git reset --mixed HEAD~"
alias gamend="git commit --amend"

alias gnevermind="!git reset --hard HEAD && git clean -d -f"

alias ggraph2="git log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order"

alias gprecommit="git diff --cached --diff-algorithm=minimal -w"


# http://stackoverflow.com/questions/3375697/useful-gcc-flags-for-c
alias ccnf=" 
clang \
-Wall \
-Wextra \
-Wpedantic \
-Wshadow \
-Wstrict-prototypes \
-Wmisleading-indentation \
" # (c)ompile (C) (n)ormal (f)lags

alias ccsf="
ccwf \
-Wundef \
-Wfloat-equal \
-Wpointer-arith \
-Wcast-align \
-Wwrite-strings \
-Waggregate-return \
" # (c)ompile (C) (s)trict (f)lags
